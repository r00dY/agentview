{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "strict": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "jsx": "react-jsx",
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "include": [
        "./src/**/*"
    ]
}